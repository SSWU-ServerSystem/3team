<!DOCTYPE html>
<html lang="ko">
<head>
    <title>회원가입 페이지</title>
    <style>
        .signup-form {
            max-width: 1000px;
            padding: 20px;
            margin: auto;
        }
        .subscription-form {
            padding: 20px;
            max-width: 1000px;
        }
        .radio-group {
            display: flex;
            justify-content: start;
            margin-bottom: 1rem;
        }
        .radio-group label {
            font-family: sans-serif;
            vertical-align: middle;
            margin-right: 0.5rem;
        }
        [type="radio"], span {
            vertical-align: middle;
        }
        #signup-section {
            margin-top: 20px;
        }
        #verify-button {
            display: none; /* 초기에는 숨기기 */
        }
        #signup-button {
            display: none; /* 초기에는 숨기기 */
        }
    </style>
    <script>
        let isVerified = false; // 인증 완료 여부를 저장하는 변수

        async function handleVerify(event) {
            event.preventDefault();
            const form = event.target;
            const formData = new FormData(form);
            const data = Object.fromEntries(formData.entries());

            // 인증 코드 확인 요청
            const response = await fetch('/email/verify-code', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            });

            const result = await response.text();

            if (response.status === 200) {
                alert('인증이 성공적으로 완료되었습니다.');
                isVerified = true; // 인증 완료 상태로 변경
                document.getElementById('signup-button').style.display = 'inline'; // 회원가입 버튼 표시
            } else {
                alert(`인증 오류: ${result}`);
            }
        }

        async function sendVerificationCode(event) {
            event.preventDefault();
            const email = document.querySelector('input[name="email"]').value;

            const response = await fetch('/email/send-verification-code', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ email })
            });

            const result = await response.text();

            if (response.status === 200) {
                alert('인증 코드가 이메일로 전송되었습니다.');
                document.getElementById('verify-button').style.display = 'inline'; // 인증 코드 입력 폼 표시
            } else {
                alert(`인증 코드 전송 오류: ${result}`);
            }
        }

        async function handleSubmit(event) {
            event.preventDefault();
            if (!isVerified) {
                alert('이메일 인증을 먼저 완료해야 합니다.');
                return;
            }

            const form = event.target;
            const formData = new FormData(form);
            const data = Object.fromEntries(formData.entries());

            // 회원가입 요청
            const response = await fetch('/subscribers/subscriber', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            });

            const result = await response.text();

            if (response.status === 200) {
                alert(result);
                window.location.href = '/'; // 회원가입 완료 후 리다이렉트
            } else {
                alert(`회원가입 오류: ${result}`);
            }
        }
    </script>
</head>
<body>
    <div class="signup-form">
        <h1>회원가입</h1>
        <p>이름, 이메일, 비밀번호는 필수입니다.</p>

        <!-- 회원가입 폼 -->
        <form class="subscription-form" onsubmit="handleSubmit(event)">
            <div class="radio-group">
                <input type="radio" id="roleUser" name="role" value="user" required>
                <label for="roleUser">User</label>
                <input type="radio" id="roleAdmin" name="role" value="admin" required>
                <label for="roleAdmin">Admin</label>
            </div>
            <input type="text" name="name" placeholder="이름" required autocomplete="off">
            <input type="text" name="email" placeholder="이메일" required autocomplete="off">
            <input type="password" name="password" placeholder="비밀번호" required autocomplete="off">
            <input type="text" name="phoneNumber" placeholder="전화번호" autocomplete="off">
            <input type="text" name="cardNumber" placeholder="카드번호 (0000-0000-0000-0000)" autocomplete="off">
            <input type="text" name="branchName" placeholder="지점명" autocomplete="off">
            <input type="text" name="address" placeholder="지점주소" autocomplete="off">
            
            <!-- 인증 버튼과 입력 폼 -->
            <button onclick="sendVerificationCode(event)">인증 코드 요청</button>
            
            <div id="verify-button">
                <h2>이메일 인증</h2>
                <form id="verification-form" onsubmit="handleVerify(event)">
                    <input type="text" name="email" placeholder="이메일" required autocomplete="off">
                    <input type="text" name="verificationCode" placeholder="인증 코드" required autocomplete="off">
                    <input type="submit" value="인증하기">
                </form>
            </div>

            <input type="submit" id="signup-button" value="회원가입"> <!-- 인증 후에만 활성화 -->
        </form>
    </div>
</body>
</html>











