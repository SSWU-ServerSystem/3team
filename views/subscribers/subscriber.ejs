<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>회원가입 페이지</title>
    <style>
        .signup-form, .verification-form {
            max-width: 600px;
            padding: 20px;
            margin: auto;
        }
    </style>
    <script>
        async function handleSubmit(event) {
            event.preventDefault();
            const form = event.target;
            const formData = new FormData(form);
            const data = Object.fromEntries(formData.entries());

            // 회원가입 요청
            const response = await fetch('/subscribers/subscriber', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            });

            const result = await response.text();

            if (response.status === 200) {
                alert(result);
                document.getElementById('verification-section').style.display = 'block';
                document.getElementById('verification-email').value = data.email; // 이메일 입력값 복사
            } else {
                alert(`회원가입 오류: ${result}`);
            }
        }

        async function sendVerificationCode(event) {
            event.preventDefault();
            const email = document.getElementById('verification-email').value;

            const response = await fetch('/send-verification-code', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ email })
            });

            const result = await response.text();

            if (response.status === 200) {
                alert('인증 코드가 이메일로 전송되었습니다.');
            } else {
                alert(`인증 코드 전송 오류: ${result}`);
            }
        }

        async function handleVerify(event) {
            event.preventDefault();
            const form = event.target;
            const formData = new FormData(form);
            const data = Object.fromEntries(formData.entries());

            // 인증 코드 확인 요청
            const response = await fetch('/verify-code', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            });

            const result = await response.text();

            if (response.status === 200) {
                alert('인증이 성공적으로 완료되었습니다.');
                window.location.href = '/'; // 인증 완료 후 리다이렉트
            } else {
                alert(`인증 오류: ${result}`);
            }
        }
    </script>
</head>
<body>
    <div class="signup-form">
        <h1>회원가입</h1>
        <form onsubmit="handleSubmit(event)">
            <input type="text" name="name" placeholder="이름" required autocomplete="off">
            <input type="email" name="email" placeholder="이메일" required autocomplete="off">
            <input type="password" name="password" placeholder="비밀번호" required autocomplete="off">
            <input type="text" name="phoneNumber" placeholder="전화번호" autocomplete="off">
            <input type="text" name="cardNumber" placeholder="카드번호 (0000-0000-0000-0000)" autocomplete="off">
            <input type="text" name="branchName" placeholder="지점명" autocomplete="off">
            <input type="text" name="address" placeholder="지점주소" autocomplete="off">
            <input type="submit" value="회원가입">
        </form>

        <!-- 이메일 인증 코드 요청 및 입력 부분 -->
        <div id="verification-section" style="display: none;">
            <h2>이메일 인증</h2>
            <form id="verification-request-form" onsubmit="sendVerificationCode(event)">
                <input type="hidden" id="verification-email" name="email" required>
                <input type="submit" value="인증 코드 요청">
            </form>
            <form id="verification-form" onsubmit="handleVerify(event)">
                <input type="text" name="verificationCode" placeholder="인증 코드" required autocomplete="off">
                <input type="submit" value="인증하기">
            </form>
        </div>
    </div>
</body>
</html>







